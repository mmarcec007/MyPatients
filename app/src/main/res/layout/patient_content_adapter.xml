<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAdapterPatientImg"
        android:background="@drawable/ic_patient_imag_2"
        android:layout_alignBottom="@+id/textViewAdapterPatientNameAndSurname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textViewAdapterPatientBZI" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewAdapterPatientBZI"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewAdapterPatientNameAndSurname" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewAdapterPatientNameAndSurname"
        android:layout_below="@+id/textViewAdapterPatientBZI"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/buttonMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal"
        android:layout_alignBottom="@+id/textViewAdapterPatientNameAndSurname" />

</RelativeLayout>